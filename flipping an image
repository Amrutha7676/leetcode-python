class Solution:
    def flipAndInvertImage(self, image):
        for row in image:
            # Reverse and invert in one step using two-pointer approach
            left, right = 0, len(row) - 1
            while left <= right:
                # Invert and swap
                if left == right:
                    row[left] ^= 1
                else:
                    row[left], row[right] = row[right] ^ 1, row[left] ^ 1
                left += 1
                right -= 1
        return image
